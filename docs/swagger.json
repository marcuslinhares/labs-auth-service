    "paths": {
        "/api/profile": {
            "get": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Requer um token JWT válido no header Authorization",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Retorna o perfil do usuário autenticado",
                "responses": {
                    "200": {
                        "description": "OK",
